{
	"name": "xsystem",
	"version": "0.1.0",
	"license": "MIT",
	"author": "Christoph Fricke <christoph@frickeonline.de> (https://christoph-fricke.de)",
	"description": "Actor Building Blocks for XState",
	"keywords": [
		"XState",
		"Actors",
		"Plug'n Play"
	],
	"repository": "github:christoph-fricke/xsystem",
	"type": "module",
	"types": "./dist/main.d.ts",
	"exports": {
		".": "./dist/main.js",
		"./core": "./dist/core/mod.js",
		"./event_bus": "./dist/actors/event_bus.js",
		"./registry": "./dist/actors/registry.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"prepublishOnly": "npm run test",
		"prepare": "husky install",
		"prepack": "npm run build",
		"clean": "rm -rf dist",
		"prebuild": "npm run clean",
		"build": "tsc -b",
		"format": "prettier --write .",
		"lint": "tsc --noEmit && eslint . && prettier -c .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage"
	},
	"peerDependencies": {
		"xstate": "^4.25.0"
	},
	"devDependencies": {
		"@types/jest": "^27.0.1",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"esbuild": "^0.12.26",
		"esbuild-jest": "^0.5.0",
		"eslint": "^7.32.0",
		"husky": "^7.0.2",
		"jest": "^27.2.0",
		"lint-staged": "^11.1.2",
		"prettier": "^2.4.0",
		"typescript": "^4.4.3",
		"xstate": "4.25.0"
	},
	"engines": {
		"node": "^12.20.0 || ^14.17.1 || >=16.0.0"
	},
	"volta": {
		"node": "16.8.0"
	},
	"lint-staged": {
		"*": [
			"prettier --ignore-unknown --write"
		],
		"*.{ts,js,mjs}": [
			"eslint --fix"
		],
		"*.{ts}": [
			"tsc --noEmit",
			"npm run test -- --watchAll false --bail --findRelatedTests"
		]
	}
}
